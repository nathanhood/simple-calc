doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Simple Calculator
    link(rel='stylesheet', href='css/app.css')
  body
    h1 Simple Calculator
    input#num1(type='text')
    button#add +
    button#sub -
    button#mul &times;
    button#div &divide;
    button#exp &times&sup2;
    input#num2(type='text')
    span#equal =
    span#answer

    br
    input#num3(type='text')
    button#root &radic;
    button#fac !
    span#equal =
    span#answer2

    script(src='js/vendor/jquery-2.1.0.js')
    script(src='js/source/main.js')
